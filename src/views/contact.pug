extends _layout.pug

block var
  -var title = 'Seekers | Contact'

block main
  .banner__page(style="background-image: url('./img/Banner/banner-contact.jpg')")
    .banner__page--content
      .container
        .row
          .col-12
            h2.color-white-1.font-size-75.font-black.margin-bottom-64 Contacts
            nav.breadcrumb__container.list-unstyled.d-flex.color-white-1.line-height-1.text-uppercase
              li.breadcrumb__item
                a(href="#").breadcrumb__link HOME
              li.breadcrumb__item
                a(href="#").breadcrumb__link CONTACT
  .contact__page
    .container.padding-top-84.padding-bottom-84
      .row.margin-bottom-30
        .col-8.text-center.mx-auto
          .about__page--logo.mb-3
            img(src="./img/logo-eye.png" alt="logo-eye.png")
          h2.color-title.font-size-45.font-black We’d love to hear from you
          p.font-size-18.font-light.mb-0
            | Please send your enquiry to  
            a(href="#").font-semi-bold.underline-yellow sales@seekers.com.vn
            |  or contact your local  
            br
            |  pecialists using the contact details below.
      .row
        .col-6
          .border-gray.padding-32.text-center
            h3.font-size-30.font-bold.color-dark-7.mb-4 Saigon (Head Office)
            p.mb-2
              strong Seekers Group AB:
              |  32/45 Bui Dinh Tuy, Ward 24,
              br
              | Binh Thanh District, HCM City, Vietnam.
            p.mb-2 Phone: +84 (0) 909 876 543
            p.mb-2 Fax: +84 (0) 909 876 543
            p.mb-2 Email: info@seekers.com.vn
            p.mb-4 Monday - Friday: 08:00 am – 5:00 pm
            a(href="#").hover-icon.hover-shadow-yellow.d-inline-block.font-bold.color-black.font-size-14.text-uppercase.text-decoration-none.border-button.border-circle.background-yellow.py-3.px-4
              | FIND US ON MAP
              i.fas.fa-arrow-right.ml-2
        .col-6
          .border-gray.padding-32.text-center
            h3.font-size-30.font-bold.color-dark-7.mb-4 Seekers USA Office
            p.mb-2
              strong Seekers USA:
              |  710 N Tucker Boulevard Suite, 304
              br
              | Saint Louis, MO 63101-1161, USA.
            p.mb-2 Phone: +1 (314) 621-8411
            p.mb-2 Fax: +1 (314) 621-8411
            p.mb-2 Email: shipping@seekers.com.vn
            p.mb-4 Monday - Friday: 08:00 am – 5:00 pm
            a(href="#").hover-icon.hover-shadow-yellow.d-inline-block.font-bold.color-black.font-size-14.text-uppercase.text-decoration-none.border-button.border-circle.background-yellow.py-3.px-4
              | FIND US ON MAP
              i.fas.fa-arrow-right.ml-2
    #contact__page__form.padding-top-84.padding-bottom-84.border-top-yellow.background-image(style="background-image: url('./img/Banner/banner01.jpg')")
      .container
        .row
          .col-12.margin-bottom-30
            h4.color-gray-3.font-size-18.font-bold.mb-3 Have Any Question?
            h2.color-white-3.font-size-45.font-black.mb-0
              | If you would like to know more
              br
              | about our services, please contact 
              br
              | us using this form
          .col-12
            form.row.contact__page__form
              .col-4
                input.contact__page__form--input.padding-left-30.padding-right-30.margin-bottom-30.font-regular.color-white-1.background-dark-8(type="text" placeholder="Complate Name")
              .col-4
                input.contact__page__form--input.padding-left-30.padding-right-30.margin-bottom-30.font-regular.color-white-1.background-dark-8(type="text" placeholder="Email Address")
              .col-4
                input.contact__page__form--input.padding-left-30.padding-right-30.margin-bottom-30.font-regular.color-white-1.background-dark-8(type="text" placeholder="Phone No")
              .col-12
                textarea.contact__page__form--textarea.padding-left-30.padding-right-30.margin-bottom-30.font-regular.color-white-1.background-dark-8.pt-3(placeholder="Your Message")
              .col-auto.ml-auto
                button.contact__page__form--button.hover-shadow-yellow.font-bold.color-black.font-size-14.text-uppercase.text-decoration-none.border-button.border-circle.background-yellow.py-3.px-4
                  | SEND MESSAGE
                  i.fas.fa-arrow-right.ml-2
